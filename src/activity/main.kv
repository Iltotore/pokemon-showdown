#:kivy 2.0.0
#:include activity/dashboard.kv
#:include activity/teambuilder.kv
#:include activity/battle.kv
#:import DrawerList graphics.widget.DrawerList
#:import Tab graphics.widget.Tab

<SplashScreen>:
    RelativeLayout:
        canvas.before:
            Color:
                rgb: 0.588, 0.749, 0.894
            Rectangle:
                pos: self.pos
                size: self.size
        Image:
            source: "misc/favicon.png"
            size_hint: 0.5, 0.5
            pos_hint: {"x": 0.25, "y": 0.25}

<ClientScreen>:

    avatar: avatar.__self__
    username: username.__self__

    client_screen_manager: client_screen_manager.__self__
    dashboard: dashboard.__self__
    teambuilder: teambuilder.__self__

    tabs: tabs.__self__

    on_receiving_updateuser:
        user = args[1].user
        avatar.source = "sprite/trainer/" + user.avatar + ".png"
        username.text = user.nickname if user.logged_in else "Logged out"

    on_mouse_pos:
        if args[1][0] < menu.size[0]: nav.set_state("open")
        if args[1][0] > nav.size[0]: nav.set_state("close")

    on_start:
        app.web_app.tabs = self

    ScreenManager:
        id: client_screen_manager
        name: "client_screen_manager"

        DashboardScreen:
            id: dashboard
            name: "dashboard"
            manager: client_screen_manager
            web_app: app.web_app

        TeamBuilderScreen:
            id: teambuilder
            name: "teambuilder"
            manager: client_screen_manager
            web_app: app.web_app

        RoomScreen:
            id: battle_room
            name: "battle"
            manager: client_screen_manager
            web_app: app.web_app

    Label:
        id: menu
        canvas.before:
            Color:
                rgb: app.theme_cls.primary_color
            Rectangle:
                size: self.size
        size_hint: 0.05, 1
        text: " >"
        font_size: fit_text(self.size, len(self.text))

    MDNavigationDrawer:

        id: nav

        size_hint_x: 0.2
        md_bg_color: app.theme_cls.primary_color

        BoxLayout:

            id: content

            orientation: "vertical"
            padding: "8dp"
            spacing: "8dp"

            AnchorLayout:
                id: up
                anchor_x: "left"
                size_hint_y: 1/6
                orientation: "vertical"

                Image:
                    id: avatar
                    size_hint: 0.5, 1
                    source: "sprite/trainer/unknown.png"


            MDLabel:
                id: username
                text: "Logged out"
                font_style: "Button"
                size_hint_y: None
                height: self.texture_size[1]

            ScrollView:
                MDList:
                    id: tabs

                    Tab:
                        text: "Home"
                        icon: "home"
                        screen_manager: client_screen_manager
                        screen: dashboard

                    Tab:
                        text: "TeamBuilder"
                        icon: "folder"
                        screen_manager: client_screen_manager
                        screen: teambuilder

                    Tab:
                        text: "Ladder"
                        icon: "medal"
                        screen_manager: client_screen_manager

                    MDSeparator:
                        padding: 8, 8, 8, 8
                        color: 0, 0, 0, 1

                    Tab:
                        text: "Battle room - test"
                        icon: "folder"
                        screen_manager: client_screen_manager
                        screen: battle_room
